                    </triggers>
                </item>
                <item>
                    <name>Hostname</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system_cpu_memory_info[Hostname]</key>
                    <delay>12h</delay>
                    <history>7d</history>
                    <trends>0</trends>
                    <value_type>CHAR</value_type>
                    <applications>
                        <application>
                            <name>System_Info</name>
                        </application>
                    </applications>
                </item>
                <item>
