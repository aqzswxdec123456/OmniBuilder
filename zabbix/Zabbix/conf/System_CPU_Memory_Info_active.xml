                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>OS_version</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system_cpu_memory_info[OS_version]</key>
                    <delay>12h</delay>
                    <history>7d</history>
                    <trends>7d</trends>
                    <value_type>FLOAT</value_type>
                    <applications>
                        <application>
                            <name>System_Info</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Uptime</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system_cpu_memory_info[Uptime]</key>
                    <delay>5m</delay>
                    <history>7d</history>
                    <trends>7d</trends>
                    <units>s</units>
                    <applications>
                        <application>
                            <name>System_Info</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&lt;10m</expression>
                            <name>{HOST.NAME} has been restarted (uptime &lt; 10m)</name>
                            <priority>WARNING</priority>
                            <description>The host uptime is less than 10 minutes</description>
                            <manual_close>YES</manual_close>
                        </trigger>
